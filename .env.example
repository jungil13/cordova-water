# Cordova Water System Inc. - Environment Config
# Copy this file to .env and fill in your values

# Base URL (no trailing slash) - Use your production URL when deploying

# Database - MySQL
DB_HOST=localhost
DB_NAME=cordova_water
DB_USER=root
DB_PASS=

# Google OAuth - Get from https://console.cloud.google.com/
# Create OAuth 2.0 credentials, add authorized redirect URI: YOUR_BASE_URL/auth/google-callback.php
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth - Get from https://developers.facebook.com/
# Add Valid OAuth Redirect URIs: YOUR_BASE_URL/auth/facebook-callback.php
FB_APP_ID=
FB_APP_SECRET=
