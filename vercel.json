"routes": [
  { "handle": "filesystem" },

  { "src": "^/$", "dest": "/index.php" },

  { "src": "^/admin$", "dest": "/admin/index.php" },
  { "src": "^/dashboard$", "dest": "/dashboard/index.php" },

  { "src": "^/auth/(.*)", "dest": "/auth/$1" },
  { "src": "^/api/(.*)", "dest": "/api/$1" },

  { "src": "^/(.*)\\.php$", "dest": "/$1.php" }
]
